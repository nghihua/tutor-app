body {
  margin: 0;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen",
    "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", "Rubik",
    sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  background-color: white;
}

code {
  font-family: source-code-pro, Menlo, Monaco, Consolas, "Courier New",
    monospace;
}
/*Navigation bar a.k.a Menu*/
nav {
  height: 100px;
  background: white;
  border-bottom: 4px solid rgba(0,0,0,0.1);
  padding: 0px;
}
nav .brand{
  font-family: Rubik;
  font-size: 60px;
}
nav .redirect {
  position: relative;
  top:-60px;
}

nav a {
  font-family: Rubik;
  font-size: 20px;
  color: black;
  margin: 0 20px;
}
nav a:hover {
  font-weight: bold;
  color: black;
}
/*footer*/
footer {
  text-align: center;
  font-family: Rosarivo;
  font-size: 15px;
  margin: 0 auto;
}

/*Login, Register*/
.login {
  margin: 0 auto;
  height: 750px;
}
.register,
.volunteers {
  margin: 70px;
}
.leftcolumn {
  float: left;
  width: 50%;
  height: 750px;
}
.rightcolumn {
  float: right;
  width: 50%;
  height: 750px;
  padding: 100px 0 100px 0;
}
img {
  position: relative;
  display: block;
  margin: 80px auto;
}
.loginbanner {	
  width: 1010px;
}
form {
  margin: 180px auto;
  padding: 20px;
  position: relative;
  left: 40px;
}

.login h2 {
  font-family: Rubik;
  font-size: 48px;
  font-weight: bold;
  line-height: 56px;
  text-align: center;
}
.register h2 {
  text-align: center;
}


label {
  text-align: right;
  clear: both;
  float: left;
  margin-right: 15px;
}

input {
  width: 350px;
  height: 65px;
  border-radius: 15px;
  border: 1px solid black;
  display: block;
  margin: 30px auto;
  padding: 12px;
  resize: vertical;
}
.register input {
  height: 45px;
}

button {
  width: 350px;
  height: 65px;
  border-radius: 15px;
  border: 1px solid #ff900D;
  background: #ff900D;
  display: block;
  margin: 0px auto;
  cursor: pointer;
  color: white;
  font-family: Tauri;
  font-size: 22px;
}

.register button {
  height: 45px;
  font-size: 17px;
}

button:hover {
  opacity: 0.8;
}

.reference{
  width: 350px;
  text-align: right;
  margin: 15px auto;
}

/*Home*/
li {
  list-style-type: none;
}

.center {
  margin-top: 10px;
  text-align: center;
}
